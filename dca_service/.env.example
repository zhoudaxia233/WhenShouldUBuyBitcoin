# DCA Service Configuration
# Copy this file to .env and adjust values as needed

# Quote asset for DCA trading (USDT, USDC, etc.)
# This is the fiat/stablecoin you'll use to buy BTC
DCA_QUOTE_ASSET=USDC

# Binance API credentials encryption key
# Leave empty - a key will be automatically generated on first use
# If you set this manually, use a Fernet key (32 url-safe base64-encoded bytes)
BINANCE_CRED_ENC_KEY=

# Optional: Override default database location
# DATABASE_URL=sqlite:///./dca.db

# Optional: Override metrics CSV path
# METRICS_CSV_PATH=../docs/data/btc_metrics.csv

# Optional: Metrics backend ("csv" or "realtime")
# METRICS_BACKEND=realtime

# Optional: Maximum age of metrics in hours before considered stale
# METRICS_MAX_AGE_HOURS=48

# Optional: Fallback to CSV if realtime metrics unavailable
# METRICS_FALLBACK_TO_CSV=true

# Optional: API prefix
# API_V1_STR=/api

# Optional: Project name
# PROJECT_NAME=DCA Service
