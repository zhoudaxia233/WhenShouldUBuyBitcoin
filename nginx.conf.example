# Nginx Configuration for DCA Service (Initial Setup)
# 
# This configuration contains only HTTP (port 80) to allow Certbot to verify domain ownership.
# After running Certbot, it will automatically add HTTPS configuration and SSL certificates.
#
# Deployment Steps:
#   1. Copy this file: sudo cp nginx.conf.example /etc/nginx/sites-available/dca-service
#   2. Edit domain: sudo nano /etc/nginx/sites-available/dca-service
#   3. Replace 'yourdomain.com' with your actual domain (e.g., btc.daxia.io)
#   4. Enable site: sudo ln -s /etc/nginx/sites-available/dca-service /etc/nginx/sites-enabled/
#   5. Remove default: sudo rm /etc/nginx/sites-enabled/default
#   6. Test config: sudo nginx -t
#   7. Start nginx: sudo systemctl start nginx && sudo systemctl enable nginx
#   8. Get SSL: sudo certbot --nginx -d yourdomain.com
#
# After Certbot runs, this file will be automatically updated with:
#   - HTTPS (port 443) configuration
#   - SSL certificate paths
#   - HTTP to HTTPS redirect

# Rate limiting zone - prevent brute force login attempts
# 5r/m = 5 requests per minute per IP address
limit_req_zone $binary_remote_addr zone=login_limit:10m rate=5r/m;

# Upstream backend (Docker container)
upstream dca_backend {
    server 127.0.0.1:8000;
}

# HTTP server
server {
    listen 80;
    listen [::]:80;
    server_name yourdomain.com;  # REPLACE: Change to your domain (e.g., btc.daxia.io)
    
    # Rate limiting for login endpoint (prevent brute force attacks)
    location /api/auth/login {
        limit_req zone=login_limit burst=3 nodelay;
        limit_req_status 429;
        
        proxy_pass http://dca_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
    }
    
    # All other requests
    location / {
        proxy_pass http://dca_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # WebSocket support (for SSE - Server-Sent Events)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Access and error logs
    access_log /var/log/nginx/dca-access.log;
    error_log /var/log/nginx/dca-error.log;
}
